@{
	ViewData["Title"] = "Dashboard";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> excursions<b>, </b> reservations<b>, </b> schools<b>and </b> transports.
    </p>
    <p class="lead mt-1">
        You can also see <b>all users </b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Reservation" asp-action="All"
            class="btn btn-primary btn-lg">All Reservations</a>
    <a asp-area="" asp-controller="Reservation" asp-action="Make"
       class="btn btn-primary btn-lg">Make Reservation</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Excursion" asp-action="All"
       class="btn btn-primary btn-lg">All Excursions</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Excursion" asp-action="Add"
       class="btn btn-primary btn-lg">Add Excursions</a>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
</div>

