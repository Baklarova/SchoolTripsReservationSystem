@using SchoolTripsReservationSystem.Extensions
@model ExcursionServiceModel

<div class="col-md-4">
    <div class="card mb-3">
        <div class="card-body text-center">
            <h4>@Model.Name</h4>
            <h6>Duration: <b>@Model.Duration</b></h6>
            <h6>
                Price Per Student:
                <b>@String.Format("{0:f2}", Model.PricePerStudent) BGN</b>
            </h6>
            <br />
            <a asp-controller="Excursion" asp-action="Details" asp-route-id="@Model.Id"
                 asp-route-information="@Model.GetInformation()" class="btn btn-success">Details</a>
            @if (this.User?.Identity?.IsAuthenticated ?? false)
            {
                @if (User.IsAdmin())
                {
                    <a asp-controller="Excursion" asp-action="Edit" asp-route-id="@Model.Id"
                       class="btn btn-warning">Edit</a>
                    <a asp-controller="Excursion" asp-action="Delete" asp-route-id="@Model.Id"
                       class="btn btn-danger">Delete</a>
                }                
                <a asp-controller="Reservation" asp-action="Make" asp-route-id="@Model.Id"
                   class="btn btn-success">Book</a>
                <p></p>
            }
        </div>
    </div>
</div>

